    border: 1px solid #f0f0f0;
    border-radius: 10rpx;
    font-size: 24rpx;
    padding: 10rpx;

}

.areaView{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.areaView button{
    background-color: #F1CBBE;
    color: white;
    align-self: bottom;
    margin-bottom: 15px;
}

