}

.bg{
    width:100%;
    float: left;
    height: 240px;
}

.logout button{
    width: 80%;
    color: red;
}

.info{
    clear:both;
    margin-top: 50rpx;
}

.info-v{
    margin-left: 138rpx;
}

.txarea{
    margin-top: 5%;
    margin-bottom: 5%;
