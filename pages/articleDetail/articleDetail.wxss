/* pages/articleDetail/articleDetail.wxss */

.author{
    margin: 5px;
    background-color: #efefef;
    border-radius:5px;
    padding: 5px;  
    height: 40px;
    display: flex;
    flex-direction: row; 
    justify-content: left;
    align-items: center;
}

.author image{
    width: 40px;
    height: 40px;
    border-radius:20px;
    margin-right: 10px;
    /*float: left;*/
}

/*.author text{
    border: 1px solid red;
}*/

.tab{
    border: 1px solid gray;
    border-radius: 5px;
    font-size: 12px;
    padding: 2px;

    top: 20px;
    color: gray;
    /*position: absolute;*/
    margin-left: 5px;
}

.img{
    width: 30px;
    height: 30px;
    border-radius:20px;

}

.comment text{
    font-size: 12px;
    padding: 5px;
    margin-right: 5%;
    width:80%;
    float: right;
}

.parent{
    background-color: #efefef;
    font-size: 12px;
    padding: 5px;
    margin-bottom: 10px;
    width:80%;
    float: right;
    margin-right: 5%;
}

.comment_title{
    display: block;
    background-color: #efefef;
    padding: 10px;
    align-content: center;
    text-align: center;
}

.comment_no{
    display: block;
    padding: 10px;
    color:#e7e7e7;
    align-content: center;
    text-align: center;
    font-size: 12px;
}

.comment_head{
    margin: 10px 10px 0px 10px;
}

.comment_head text{
    position: relative;
    bottom:10px;
    margin-left: 10px;
    font-size: 12px;
}
.comment-time{
   flex-direction: column;
}

.time{
    float: right;
    margin-top: 16px;
}

.reply{
    border: 1px solid #f0f0f0;
    border-radius: 10rpx;
    font-size: 24rpx;
    background-color: white;
    padding: 0rpx 20rpx 0rpx 20rpx;
    flex-grow: 1;
    line-height: 60rpx;
}

.repView{
    display: flex;
    background-color: #f0f0f0;
    padding: 10rpx;
}

.repView view{
    margin-left: 10rpx;
    display: flex;
    justify-content: center;
}


.repView button{
    background-color: #F1CBBE;
    color: white;
}

.reply-hover{
    opacity: 0.7;
}
/*text{
    border:1px solid red;
}*/
.txarea{
    margin-top: 5%;
    margin-bottom: 5%;
    width: 90%;
    border: 1px solid #f0f0f0;
    border-radius: 10rpx;
    font-size: 24rpx;
    padding: 10rpx;

}

.areaView{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.areaView button{
    background-color: #F1CBBE;
    color: white;
    align-self: bottom;
    margin-bottom: 15px;
}

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  /*padding-top: 20rpx;*/
}

